<div class="container form-new">
  <%= simple_form_for([@restaurant, @review]) do |f| %>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :rating %>
      <%= f.select :rating, (0..5).to_a, class: 'form-control' %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
